[merge]
	tool = kdiff3_

[diff]
	tool = kdiff3

[mergetool.ediff]
    cmd = ediff.sh $LOCAL $REMOTE $MERGED $BASE
[mergetool "meld"]
	path = c:/local/meld-1.5.3/bin/meld
[push]
	default = current
[mergetool "kdiff3_"]
	cmd = kdiff3 --L1 base --L2 local --L3 remote $BASE $LOCAL $REMOTE -o $MERGED
    trustExitCode = true